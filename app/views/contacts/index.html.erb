<% provide :title, 'お問い合わせ' %>
<html lang="ja">
 <head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="/lists.css">
    <link rel="stylesheet" type="text/css" href="/contacts.css">
 </head>
 <body>
    <header  class="heading">
     <a href="/lists/top" class="top"><span>T</span><span>トップ</span></a>
     <a href="/lists/profile" class="top2"><span>ABOUT ME</span><span>私について</span></a>
     <a href="/contacts" class="top3"><span>CONTACT</span><span>問い合わせ</span></a>
   </header>
    <div class="main-v">
      <div class="contact">
       <div class="contact-box">
        <h2 class="title">お問い合わせ</h2>
        <%= form_with model: @contact, local: true, url: contacts_confirm_path do |f| %>
        <% if @contact.errors.any? %>
        <div class="alert alert-danger" role="alert">
            <h5><strong>入力内容にエラーがあります。</strong></h5>
            <ul>
                <% @contact.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
        </div>
        <% end %>
       <div class="form-group">
          <div class="contact-text">
            <%= f.label :name, '名前' %>
            <span class="textbox-label">必須</span>
          </div>
          <%= f.text_field :name, id: 'name', class: 'form-input', :placeholder => '山田 花子' %>
       </div>
       <div class="form-group">
          <div class="contact-text">
            <%= f.label :email, 'メールアドレス' %>
            <span class="textbox-label">必須</span>
          </div>
          <%= f.text_field :email, id: 'email', class: 'form-input', :placeholder => 'user@example.com' %>
       </div>
       <div class="form-group">
          <div class="contact-text">
           <%= f.label :message, 'お問い合わせ内容' %>
           <span class="textbox-label">必須</span>
          </div>
          <%= f.text_area :message, id: 'content', class: 'form-input-last', :placeholder => 'お問い合わせ内容', :rows => '5' %>
       </div>
       <div class="contact-bnt">
         <%= f.submit "確認", class: "btn" %>
       </div>
       <% end %>
       </div>
      </div>
    </div>
    <footer>
      <p class="footer-text"> Ayaka Nishino　portfolio </p>
    </footer>
 </body>
</html>